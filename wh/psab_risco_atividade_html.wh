         laSAVE_AUX := {} ,;
         laAUX      := {} ,;
         laPUT      := {} ,;
         laCIP      := {} ,;
         laRESULT   := {} ,;
         laFOREIGN  := {} as array
   local ii := 0 as int
   wac_tp_pasta(lcTP_PASTA) // Função para verificação de permissões por pasta, encontra-se na func.wic
   if val(lcNR_PASTA) == 0
      lcNR_PASTA := '0'
   endif

   lcTABLE  := 'pst_contrato_prestacao_servico'
   lcWHERE  := 'NR_PASTA='+lcNR_PASTA
   laFIELDS := {'NR_PASTA',;
                'SEGURO_RESPONSABILIDADE',;
                'SEGURO_DESCRICAO',;
                'FL_RESP_DIFESTOQUE',;
                'VL_RESP_DIFESTOQUE',;
                'RESP_DANO',;
                'RESP_DANO_EXTRA'}
   // Glauber 06/01/2011
   AbasPerfil(lcTP_PASTA,laFIELDS)

   WPut('FL_RESP_DIFESTOQUE.option','S')
   carrega_cbox({{'seguro_responsabilidade','SEGURO_RESPONSABILIDADE','Y'},;
                 {'resp_dano','RESP_DANO','Y'}})

   if lcACTION == 'SAVE' .and. gbWAC_WRITE
      if verif_reqfield(WSet('_USER_INTERFACE'))
         aadd(laSAVE,laFIELDS)
         for ii := 1 to len(laFIELDS)
            aadd(laSAVE_AUX,WGet(laFIELDS[ii]))
         next ii
         aadd(laSAVE,laSAVE_AUX)

         psab_logs(laSAVE,lcTABLE,lcWHERE,lcNR_PASTA,'Riscos da Atividade') //Gravar log de alterações da pasta

         if db_replace(laSAVE,lcTABLE,{lcWHERE}) == -1
             error_sys(db_error())
         endif

         if WGet('NR_PASTA','N') == 0
            lcNR_PASTA := str(db_insert_id())
         endif
      endif
   endif

   if val(lcNR_PASTA) > 0 .and. gbWAC_READ
      if db_select(laFIELDS,lcTABLE,,{'NR_PASTA='+lcNR_PASTA}) == -1
         error_sys(db_error())
      endif
      laRESULT := db_fetchall()
      if len(laRESULT) > 1
         db2Put(laRESULT)
         /*
