   local lcACTION       := upper(WGet('ACTION','C')),;
         lcNR_PASTA     := WGet('NR_PASTA','C') ,;
         lcTP_PASTA     := WGet('TP_PASTA','C') ,;
         lcTABLE        := '' ,;
         lcWHERE        := '' ,;
         lcCIPS         := '' as string
   local laFIELDS   := {} ,;
