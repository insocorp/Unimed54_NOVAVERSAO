               if db_select(laFOREIGN[ii,4],;
                            laFOREIGN[ii,1],,;
                            {laFOREIGN[ii,2]+'='+str(laRESULT[2,db_fetchncol(laRESULT,laFOREIGN[ii,3])])}) == -1
                  error_sys(db_error())
               endif
               db2Put(db_fetchall())
            endif
         next ii
