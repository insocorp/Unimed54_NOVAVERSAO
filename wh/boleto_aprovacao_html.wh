                 wget('VAR_COFINS','C'),;
                 wget('VAR_PIS','C'),; 
                 wget('VAR_BOL_APROVADO','C')}
      
      lctipo_aprov := wget('VAR_BOL_APROVADO','C')
        
      aadd(laSAVEB,laFIELDS) 
      aadd(laSAVEB,laSAVE)                

// bloquear aprovacao de boleto para vencimento < d-1
      if lctipo_aprov == 'A'
         if db_select({'DT_VENCTO'},;
                'mvt_boleto',,;
                {'NR_BOLETO = '+wget('NR_BOLETO','C')},;
                ) == -1
            error_sys(db_error())
         endif
   
         laRES4 := db_fetchall()
