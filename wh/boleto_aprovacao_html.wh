             {2,'pfpj as pfpjp','pfpjp.CIP=mvt_boleto.CIP_EMPRESA_PAGADORA'},;
             {2,'pfpj as pfpjf','pfpjf.CIP=mvt_boleto.CIP_FAVORECIDO'},;             
