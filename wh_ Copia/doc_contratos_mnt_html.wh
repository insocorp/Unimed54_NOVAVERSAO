               endif
            else    
               aadd(laSAVEAUX,WGet(laFIELDS[x]))
            endif   
         next x
         aadd(laSAVE,laFIELDS)
         aadd(laSAVE,laSAVEAUX)
         if db_replace(laSAVE,lcTABLE,{lcWHERE},) == -1
            error_sys(db_error())
