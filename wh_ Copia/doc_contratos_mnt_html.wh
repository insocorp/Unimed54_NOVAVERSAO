         laSAVEAUX  := {},;
         laMVTSAVE  := {},;
         laRES      := {},;
         laFIELDS   := {},;
         laVALIDA   := {},;
         laFOREIGN  := {},;
         laPUT      := {} as array

   local lcWHERE    := '',;
         lcTABLE    := '',;
