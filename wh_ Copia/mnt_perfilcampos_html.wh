             for ii := 1 to len(laRES)
                 if ii < len(laRES)
                    lcWHERE += DLAP + laRES[ii] + DLAP + ','
                 else
                    lcWHERE += DLAP + laRES[ii] + DLAP
                 endif
             next ii
             lcWHERE += ')'
          endif

          if ! empty(WGET('GROUPS','C'))
             lcWHERE += iif(! Empty(lcWHERE),' AND ','')
