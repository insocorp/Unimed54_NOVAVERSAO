         endif
         wput('RESUME_RESULTSET',lcCODE)
         aadd(laRESULT[1],'(row)')
         for ii := 2 to len(laRESULT)
/*
            aadd(laRESULT[ii],'(row)'+wic_action('wicaction/mnt.perfilcampos.html?'+;
                                                 'NR_CONTROLE='+ALLTRIM(laRESULT[ii, db_fetchncol(laRESULT,'NR_CONTROLE')])+;
