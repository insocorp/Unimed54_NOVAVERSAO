METHOD Init() CLASS EbaoPessoa


    self:CodPessoa            := ''
    self:TipoPessoa           := 1 // 1 = fisica, 2 juridica
    self:NmFavorecido         := ''
    self:SobrenmFavorecido    := ''
    self:CnpjCpfFavorecido    := ''
    self:DtUltAlteracao       := Ctod('')
    self:DtNascimento         := Ctod('')
    self:Cep                  := ''
    self:TipoLogradouro       := ''
    self:Endereco             := ''
    self:Numero               := ''
    self:Complemento          := ''
    self:Bairro               := ''
    self:CodCidade            := ''
    self:Cidade               := ''
    self:Uf                   := ''
    self:Pais                 := ''


return(self)


/*
